<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<script
			src="https://kit.fontawesome.com/ae360af17e.js"
			crossorigin="anonymous"
		></script>

		<link
			rel="stylesheet"
			href="https://cdn.datatables.net/1.13.6/css/dataTables.bootstrap5.min.css"
		/>
		<link
			rel="stylesheet"
			href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,400,0,0"
		/>
		<link
			href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
			rel="stylesheet"
			integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
			crossorigin="anonymous"
		/>
		<script
			defer
			src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
		></script>
		<script defer src="https://code.jquery.com/jquery-3.7.0.js"></script>
		<script
			defer
			src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"
		></script>
		<script
			defer
			src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap5.min.js"
		></script>
		<script defer src="/js/toggler.js"></script>
		<script defer src="/js/tables.js"></script>
		<script defer src="/js/tooltip.js"></script>
		<link rel="stylesheet" type="text/css" href="/css/styles.css" />

		<title>Accounts</title>
	</head>
	<body>
		<div class="wrapper">
			<aside id="sidebar">
				<div class="h-50">
					<div class="sidebar-logo">
						<a href="">
							<img
								src="/img/logo.png"
								class="img-thumbnail border-0"
								alt="logo"
							/>
						</a>
					</div>
					<hr class="mx-4 mt-0" style="width: 13rem" />
					<div class="container my-2">
						<div class="row">
							<div class="col-md-4 mx-2">
								<img
									src="../img/pain.jpg"
									class="img-fluid img-thumbnail"
									alt="..."
								/>
							</div>
							<div class="col-md-6">
								<p class="my-0 pt-2" style="font-size: 15px">
									<%= person.fname %> <%= person.lname %>
								</p>
								<span class="badge rounded-pill text-bg-info my-0"
									><%= person.role %></span
								>
							</div>
						</div>
					</div>
					<!-- Sidebar Navigation -->
					<ul class="sidebar-nav">
						<li class="sidebar-item">
							<a
								href="/admin/dashboard"
								class="sidebar-link collapsed"
								data-bs-target="#dashboard"
								aria-expanded="false"
								aria-controls="dashboard"
							>
								<i class="fa-solid fa-sliders pe-2"></i>
								Dashboard
							</a>
						</li>
						<li class="sidebar-item">
							<a
								href="/admin/accounts"
								class="sidebar-link"
								data-bs-target="#"
								aria-expanded="false"
								aria-controls="users"
							>
								<i class="fa-solid fa-user pe-2"></i>
								Account Management
							</a>
						</li>
						<li class="sidebar-item">
							<a
								href="/admin/records-menu"
								class="sidebar-link"
								aria-expanded="false"
								aria-controls="pages"
							>
								<i class="fa-regular fa-file-lines pe-2"></i>
								Records Management
							</a>
						</li>
						<li class="sidebar-item">
							<a
								href="/admin/archives"
								class="sidebar-link"
								aria-expanded="false"
								aria-controls="auth"
							>
								<i class="fa-solid fa-archive pe-2"></i>
								Archives
							</a>
						</li>
						<li class="sidebar-item">
							<a
								href="/admin/calendar"
								class="sidebar-link collapsed"
								data-bs-target="#dashboard"
								aria-expanded="false"
								aria-controls="dashboard"
							>
								<i class="fa-regular fa-calendar pe-2"></i>
								Calendar
							</a>
						</li>
						<li class="sidebar-item">
							<a
								href="/admin/reports"
								class="sidebar-link collapsed"
								data-bs-target="#dashboard"
								aria-expanded="false"
								aria-controls="dashboard"
							>
								<i class="fa-regular fa-flag pe-2"></i>
								Reports
							</a>
						</li>
					</ul>
				</div>
			</aside>

			<div class="main">
				<nav class="navbar navbar-expand-lg px-1 border-bottom">
					<!-- Button for sidebar toggle -->
					<div class="container-fluid">
						<button class="btn" type="button" data-bs-theme="light">
							<span class="navbar-toggler-icon"></span>
						</button>

						<ul class="navbar-nav">
							<!-- Added this ul element for right-aligned items -->
							<li class="nav-item dropdown">
								<a
									class="nav-link dropdown-toggle"
									href="#"
									role="button"
									data-bs-toggle="dropdown"
									aria-expanded="false"
								>
									<span class="fa-solid fa-user pe-2"></span>
								</a>
								<ul class="dropdown-menu dropdown-menu-lg-end">
									<li>
										<a class="dropdown-item" href="/admin/profile"
											>View Profile</a
										>
									</li>
									<li>
										<a class="dropdown-item" href="/admin/historyLogs"
											>History logs</a
										>
									</li>
									<li><hr class="dropdown-divider" /></li>
									<li>
										<a class="dropdown-item" href="/auth/logout">Logout</a>
									</li>
								</ul>
							</li>
						</ul>
					</div>
				</nav>
				<div class="container-lg">
					<h2 class="my-1">Account Management</h2>
					<hr />
					<div class="container w-100">
						<% try { %> <%- include('../credentials/flash-message.ejs') %> <% }
						catch (error) { %>
						<div>Error: <%= error.message %></div>
						<% } %>
						<a class="btn btn-success btn-sm my-2" href="/auth/register"
							>Add user</a
						>

						<table
							id="example"
							class="table table-striped hover"
							style="width: 100%"
						>
							<thead class="table-info">
								<tr>
									<th>Last Name</th>
									<th>First Name</th>
									<th>Email</th>
									<th>Role</th>
									<th>Class Advisory</th>
									<th>Status</th>
									<th>Action</th>
								</tr>
							</thead>
							<tbody>
								<% users.forEach(user => { %> <% if (user._id.toString() !==
								currentUser._id.toString() && user.role !== 'System Admin') { %>
								<tr>
									<td><%= user.lname %></td>
									<td><%= user.fname %></td>
									<td><%= user.email %></td>
									<td><%= user.role %></td>
									<td><%= user.classAdvisory %></td>
									<td><%= user.status %></td>
									<td>
										<button
											type="button"
											class="btn btn-sm"
											data-bs-toggle="modal"
											data-bs-target="#editUserModal"
											onclick="populateUserForm('<%= user._id %>', '<%= user.lname %>', '<%= user.fname %>', '<%= user.role %>', '<%= user.classAdvisory %>', '<%= user.email %>')"
										>
											<span
												class="material-symbols-outlined"
												data-bs-toggle="tooltip"
												data-bs-placement="top"
												data-bs-title="Edit"
											>
												edit
											</span>
										</button>
									</td>
								</tr>
								<% } %> <% }); %>
							</tbody>

							<tfoot class="table-info">
								<tr>
									<th>Last Name</th>
									<th>First Name</th>
									<th>Email</th>
									<th>Role</th>
									<th>Class Advisory</th>
									<th>Status</th>
									<th>Action</th>
								</tr>
							</tfoot>
						</table>
					</div>
					<div
						class="modal fade"
						id="editUserModal"
						tabindex="-1"
						aria-labelledby="editRecordModalLabel"
						aria-hidden="true"
					>
						<div class="modal-dialog">
							<div class="modal-content">
								<div class="modal-header">
									<h5 class="modal-title" id="editRecordModalLabel">
										Edit Account details
									</h5>
									<button
										type="button"
										class="btn-close"
										data-bs-dismiss="modal"
										aria-label="Close"
									></button>
								</div>
								<div class="modal-body">
									<form id="editUserForm" method="post">
										<div class="form-floating mb-3">
											<input
												type="text"
												class="form-control"
												name="editLName"
												id="editLName"
												required
											/>
											<label for="editLName">Last Name</label>
										</div>
										<div class="form-floating mb-3">
											<input
												type="text"
												class="form-control"
												name="editFName"
												id="editFName"
												required
											/>
											<label for="editFName">First Name</label>
										</div>
										<div class="form-floating mb-3">
											<input
												type="email"
												class="form-control"
												name="editEmail"
												id="editEmail"
												required
											/>
											<label for="editEmail">Email</label>
										</div>
										<div class="form-floating mb-3">
											<select
												class="form-select"
												name="editRole"
												id="editRole"
												required
											>
												<% if (currentUserRole === 'System Admin') { %>
												<option value="System Admin">System Admin</option>
												<option value="Admin">Admin</option>
												<option value="Class Advisor">Class Advisor</option>
												<% } else if (currentUserRole === 'Admin') { %>
												<option value="Admin" selected disabled>
													Select role
												</option>
												<option value="Class Advisor">Class Advisor</option>
												<% } else { %>
												<option disabled>Select role</option>
												<% } %>
											</select>
											<label for="editRole">Role</label>
										</div>
										<div class="form-floating mb-3">
											<select
												class="form-select"
												name="editClassAdvisory"
												id="editClassAdvisory"
												required
											>
												<option disabled>Class Advisory</option>
												<option value="Kinder">Kinder</option>
												<option value="Grade 1">Grade 1</option>
												<option value="Grade 2">Grade 2</option>
												<option value="Grade 3">Grade 3</option>
												<option value="Grade 4">Grade 4</option>
												<option value="Grade 5">Grade 5</option>
												<option value="Grade 6">Grade 6</option>
											</select>
											<label for="editClassAdvisory">Class Advisory</label>
										</div>
										<div class="d-flex justify-content-end">
											<button type="submit" class="btn btn-success">
												Update
											</button>
										</div>
									</form>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
		<script>
			// JavaScript function to populate the edit form
			function populateUserForm(
				_id,
				lname,
				fname,
				role,
				classAdvisory,
				email
			) {
				document
					.getElementById('editUserForm')
					.setAttribute('action', `/admin/edit-users/${_id}`);
				document.getElementById('editLName').value = lname;
				document.getElementById('editFName').value = fname;
				document.getElementById('editEmail').value = email;
				document.getElementById('editRole').value = role;
				document.getElementById('editClassAdvisory').value = classAdvisory;
			}
		</script>
	</body>
</html>
