        <link rel="stylesheet" type="text/css" href="/css/styles.css">
		<title>Records</title>
		
	</head>
	<body>
		<div class="wrapper">
			<!-- Sidebar -->
			<aside id="sidebar">
				<div class="h-50">
					<div class="sidebar-logo">
						<a href="">
							<img
								src="/img/logo.png"
								class="img-thumbnail border-0"
								alt="logo"
							/>
						</a>
					</div>
					<hr class="mx-4 mt-0" style="width: 13rem" />
					<div class="container my-2">
						<div class="row">
							<div class="col-md-4 mx-2">
								<img src="<%= person.profilePicture || '/img/default-img.jpg' %>" alt="Profile Picture" style="width: 70px; height: 65px; border-radius: 50%;" />
							</div>
							<div class="col-md-6">
								<p class="my-0 pt-2" style="font-size: 15px"><%= person.fname %> <%= person.lname %></p>
								<span class="badge rounded-pill text-bg-info my-0 fw-normal"
									><%= person.role %></span
								>
							</div>
						</div>
					</div>
					<!-- Sidebar Navigation -->
					<ul class="sidebar-nav">
						<li class="sidebar-item">
							<a
								href="/admin/dashboard"
								class="sidebar-link collapsed"
								data-bs-target="#dashboard"
								aria-expanded="false"
								aria-controls="dashboard"
								data-menuitem="dashboard"
							>
								<i class="fa-solid fa-sliders pe-2"></i>
								Dashboard
							</a>
						</li>
						<li class="sidebar-item">
							<a
								href="/admin/accounts"
								class="sidebar-link"
								aria-expanded="false"
								aria-controls="users"
								data-menuitem="accounts"
							>
								<i class="fa-solid fa-user pe-2"></i>
								Account Management
							</a>
						</li>
						<li class="sidebar-item" style="border-right: 2px solid #007bff; background: #e3edf0;">
							<a
								href="/admin/records-menu"
								class="sidebar-link"
								aria-expanded="false"
								aria-controls="pages"
								data-menuitem="records"
							>
								<i class="fa-regular fa-file-lines pe-2"></i>
								Records Management
							</a>
						</li>
						<li class="sidebar-item">
							<a
								href="/admin/academic-year"
								class="sidebar-link"
								aria-expanded="false"
								data-menuitem="archives"
							>
								<i class="fa-solid fa-archive pe-2"></i>
								Archives
							</a>
						</li>
						<li class="sidebar-item">
							<a
								href="/admin/calendar"
								class="sidebar-link collapsed"
								data-bs-target="#dashboard"
								aria-expanded="false"
								data-menuitem="calendar"
							>
								<i class="fa-regular fa-calendar pe-2"></i>
								Calendar
							</a>
						</li>
						<li class="sidebar-item">
							<a
								href="/admin/reports"
								class="sidebar-link collapsed"
								data-bs-target="#dashboard"
								aria-expanded="false"
								aria-controls="dashboard"
								data-menuitem="reports"
							>
								<i class="fa-regular fa-flag pe-2"></i>
								Reports
							</a>
						</li>
					</ul>
				</div>
			</aside>
			<!-- Main Component -->
			<div class="main">
				<nav class="navbar navbar-expand-lg px-1 border-bottom">
					<!-- Button for sidebar toggle -->
					<div class="container-fluid">
						<button class="btn" type="button" data-bs-theme="light">
							<span class="navbar-toggler-icon"></span>
						</button>
						<ul class="navbar-nav">
							<!-- Added this ul element for right-aligned items -->
							<li class="nav-item dropdown">
								<a
									class="nav-link dropdown-toggle"
									href="#"
									role="button"
									data-bs-toggle="dropdown"
									aria-expanded="false"
								>
									<span class="fa-solid fa-user pe-2"></span>
								</a>
								<ul class="dropdown-menu dropdown-menu-lg-end">
									<li>
										<a
											class="dropdown-item"
											href="/admin/profile"
											>View Profile</a
										>
									</li>
									<li>
										<a
											class="dropdown-item"
											href="/admin/historyLogs"
											>History Logs</a
										>
									</li>
									<li><hr class="dropdown-divider" /></li>
									<li>
										<a class="dropdown-item" href="/auth/logout"
											>Logout</a
										>
									</li>
								</ul>
							</li>
						</ul>
					</div>
				</nav>
