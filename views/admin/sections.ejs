<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link
			href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
			rel="stylesheet"
			integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
			crossorigin="anonymous"
		/>
		<link
			rel="stylesheet"
			href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,400,0,0"
		/>
		<script
			defer
			src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
			integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
			crossorigin="anonymous"
		></script>
		<script
			defer
			src="https://kit.fontawesome.com/ae360af17e.js"
			crossorigin="anonymous"
		></script>
		<script defer src="https://cdn.jsdelivr.net/npm/chart.js"></script>
		<script defer src="/js/tooltip.js"></script>
		<script defer src="/js/sa.charts.js"></script>
		<script defer src="/js/toggler.js"></script>
		<script defer src="/js/create.new.card.js"></script>
		<link rel="stylesheet" type="text/css" href="/css/styles.css" />
		<link rel="icon" type="image/x-icon" href="/img/logo.png">
		<title>Sections</title>
	</head>
	<body>
		<div class="wrapper">
			<!-- Sidebar -->
			<aside id="sidebar">
				<div class="h-50">
					<div class="sidebar-logo">
						<a href="">
							<img
								src="/img/logo.png"
								class="img-thumbnail border-0"
								alt="logo"
							/>
						</a>
					</div>
					<hr class="mx-4 mt-0" style="width: 13rem" />
					<div class="container my-2">
						<div class="row">
							<div class="col-md-4 mx-2">
								<img src="<%= person.profilePicture || '/img/default-img.jpg' %>" alt="Profile Picture" style="width: 70px; height: 65px; border-radius: 50%;" />
							</div>
							<div class="col-md-6">
								<p class="my-0 pt-2" style="font-size: 15px">
									<%= person.fname %> <%= person.lname %>
								</p>
								<span class="badge rounded-pill text-bg-info my-0 fw-normal"
									><%= person.role %></span
								>
							</div>
						</div>
					</div>
					<!-- Sidebar Navigation -->
					<ul class="sidebar-nav">
						<li class="sidebar-item">
							<a
								href="/admin/dashboard"
								class="sidebar-link collapsed"
								data-bs-target="#dashboard"
								aria-expanded="false"
								aria-controls="dashboard"
								data-menuitem="dashboard"
							>
								<i class="fa-solid fa-sliders pe-2"></i>
								Dashboard
							</a>
						</li>
						<li class="sidebar-item">
							<a
								href="/admin/accounts"
								class="sidebar-link"
								aria-expanded="false"
								aria-controls="users"
								data-menuitem="accounts"
							>
								<i class="fa-solid fa-user pe-2"></i>
								Account Management
							</a>
						</li>
						<li class="sidebar-item" style="border-right: 2px solid #007bff; background: #e3edf0;">
							<a
								href="/admin/records-menu"
								class="sidebar-link"
								aria-expanded="false"
								aria-controls="pages"
								data-menuitem="records"
							>
								<i class="fa-regular fa-file-lines pe-2"></i>
								Records Management
							</a>
						</li>
						<li class="sidebar-item">
							<a
								href="/admin/archives"
								class="sidebar-link"
								aria-expanded="false"
								data-menuitem="archives"
							>
								<i class="fa-solid fa-archive pe-2"></i>
								Archives
							</a>
						</li>
						<li class="sidebar-item">
							<a
								href="/admin/calendar"
								class="sidebar-link collapsed"
								data-bs-target="#dashboard"
								aria-expanded="false"
								data-menuitem="calendar"
							>
								<i class="fa-regular fa-calendar pe-2"></i>
								Calendar
							</a>
						</li>
						<li class="sidebar-item">
							<a
								href="/admin/reports"
								class="sidebar-link collapsed"
								data-bs-target="#dashboard"
								aria-expanded="false"
								aria-controls="dashboard"
								data-menuitem="reports"
							>
								<i class="fa-regular fa-flag pe-2"></i>
								Reports
							</a>
						</li>
					</ul>
				</div>
			</aside>
			<!-- Main Component -->
			<div class="main">
				<nav class="navbar navbar-expand-lg px-1 border-bottom">
					<!-- Button for sidebar toggle -->
					<div class="container-fluid">
						<button class="btn" type="button" data-bs-theme="light">
							<span class="navbar-toggler-icon"></span>
						</button>
						<ul class="navbar-nav">
							<!-- Added this ul element for right-aligned items -->
							<li class="nav-item dropdown">
								<a
									class="nav-link dropdown-toggle"
									href="#"
									role="button"
									data-bs-toggle="dropdown"
									aria-expanded="false"
								>
									<span class="fa-solid fa-user pe-2"></span>
								</a>
								<ul class="dropdown-menu dropdown-menu-lg-end">
									<li>
										<a class="dropdown-item" href="/admin/profile"
											>View Profile</a
										>
									</li>
									<li>
										<a class="dropdown-item" href="/admin/historyLogs"
											>History Logs</a
										>
									</li>
									<li><hr class="dropdown-divider" /></li>
									<li>
										<a class="dropdown-item" href="/auth/logout">Logout</a>
									</li>
								</ul>
							</li>
						</ul>
					</div>
				</nav>
				<div class="container-lg">
					<h2 class="mt-2">Grade</h2>
					<hr class="mb-0" />
                    <h5 class="ms-3 mt-2 mb-3 " style="color: #45453a;">Sections</h5>
					<div class="container-lg mt-0">
						
						<button onclick="addNewSection()" class="btn btn-primary btn-sm mb-3 ms-3">Add section</button>
				
					</div>
					<div id="cardContainer" class="row gap-4 ms-3 mb-3" style="max-height: 430px; overflow-y: auto;">
						<% if (cards.length === 0) { %>
							<div class="alert alert-warning text-center" role="alert">
								There are no sections available.
							</div>
						<% } else { %>
							<% cards.forEach(card => { %>
								<div class="card custom-card-2 border-0 p-0" style="width: 15rem; height: 8rem; position: relative;">
									<div class="card-body" style="background-color: #A3FFD6;">
										<h5 class="card-title" style="font-weight: bold;"><%= card.name %></h5>
										<p class="card-text mb-0" style="font-size: 15px; ">List of Students in <%= card.name %></p>
										<!-- Dropdown menu -->
										<div class="btn-group position-absolute top-0 end-0 dropdown-menu-container" style="padding: 3px;">
											<button type="button" style="background: none; border: none;" class="btn dropdown-toggle dropdown-toggle-sm menu-toggle" data-bs-toggle="dropdown" aria-expanded="false">
												<span class="material-symbols-outlined" style="height: 12px;">
													menu
												</span>
											</button>
											
											<ul class="dropdown-menu" style="font-size: 15px;">
												<li><a class="dropdown-item edit-card" href="#" data-card-id="<%= card._id %>">Edit</a></li>
												<li><a class="dropdown-item delete-card" href="#" data-card-id="<%= card._id %>">Delete</a></li>
											</ul>
											
										</div>
									</div>
									<a href="" class="card-footer text-center bg-0" style="font-size: 14px; border: 0; background-color: #FFF8DC;">
										<p style="width: 100%;">View <%= card.name %></p>
									</a>
								</div>
							<% }); %>
						<% } %>
						
					</div>
					
				</div>
			</div>
		</div>
	</body>
</html>
