<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta http-equiv="X-UA-Compatible" content="IE=edge" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link
			href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
			rel="stylesheet"
			integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
			crossorigin="anonymous"
		/>
		<script
			defer
			src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
			integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
			crossorigin="anonymous"
		></script>
        <script defer
			src="https://kit.fontawesome.com/ae360af17e.js"
			crossorigin="anonymous"
		></script>
        <script defer src="https://cdn.jsdelivr.net/npm/chart.js"></script>
        <script defer src="/js/charts.js"></script>
        <script defer src="/js/toggler.js"></script>
        <link rel="stylesheet" type="text/css" href="/css/styles.css">
		<title>Profile</title>
	</head>
	<body>
		<div class="wrapper">
			<!-- Sidebar -->
			<aside id="sidebar">
				<div class="h-50">
					<div class="sidebar-logo">
						<a href="">
							<img
								src="../img/logo.png"
								class="img-thumbnail border-0"
								alt="BCA"
							/>
						</a>
					</div>
					<hr class="mx-4 mt-0" style="width: 13rem" />
					<div class="container my-2">
						<div class="row">
							<div class="col-md-4 mx-2">
								<img
									src="../img/pain.jpg"
									class="img-fluid img-thumbnail"
									alt="..."
								/>
							</div>
							<div class="col-md-6">
								<p class="my-0" style="font-size: 15px"><%= person.name %></p>
								<span class="badge rounded-pill text-bg-info my-0 fw-normal"
									><%= person.role %></span
								>
							</div>
						</div>
					</div>
					<!-- Sidebar Navigation -->
					<ul class="sidebar-nav">
						<li class="sidebar-item">
							<a
								href="/classAdvisor/dashboard"
								class="sidebar-link collapsed"
								data-bs-target="#dashboard"
								aria-expanded="false"
								aria-controls="dashboard"
							>
								<i class="fa-solid fa-sliders pe-2"></i>
								Dashboard
							</a>
						</li>
						<li class="sidebar-item">
							<a
								href="/classAdvisor/records"
								class="sidebar-link"
								aria-expanded="false"
								aria-controls="pages"
							>
								<i class="fa-regular fa-file-lines pe-2"></i>
								Records Management
							</a>
						</li>
						<li class="sidebar-item">
							<a
								href="/classAdvisor/archives"
								class="sidebar-link"
								aria-expanded="false"
								aria-controls="auth"
							>
								<i class="fa-regular fa-user pe-2"></i>
								Archives
							</a>
						</li>
						<li class="sidebar-item">
							<a
								href="/classAdvisor/calendar"
								class="sidebar-link collapsed"
								data-bs-target="#dashboard"
								aria-expanded="false"
								aria-controls="dashboard"
							>
								<i class="fa-regular fa-calendar pe-2"></i>
								Calendar
							</a>
						</li>
					</ul>
				</div>
			</aside>
			<!-- Main Component -->
			<div class="main">
				<nav class="navbar navbar-expand-lg px-1 border-bottom">
					<!-- Button for sidebar toggle -->
					<div class="container-fluid">
						<button class="btn" type="button" data-bs-theme="light">
							<span class="navbar-toggler-icon"></span>
						</button>
						<ul class="navbar-nav">
							<!-- Added this ul element for right-aligned items -->
							<li class="nav-item dropdown">
								<a
									class="nav-link dropdown-toggle"
									href="#"
									role="button"
									data-bs-toggle="dropdown"
									aria-expanded="false"
								>
									<span class="fa-solid fa-user pe-2"></span>
								</a>
								<ul class="dropdown-menu dropdown-menu-lg-end">
									<li>
										<a
											class="dropdown-item"
											href="/classAdvisor/profile"
											>View Profile</a
										>
									</li>
									<li><hr class="dropdown-divider" /></li>
									<li>
										<a class="dropdown-item" href="/auth/logout"
											>Logout</a
										>
									</li>
								</ul>
							</li>
						</ul>
					</div>
				</nav>
				<div class="container-lg">
					<h2 class="mt-2">Profile</h2>
					<hr />
					<div class="card custom-card-2 border-0">
						<div class="card-body">
							<div class="container">
								<div class="col m-0">
									<div class="container">
										<h3 class="fw-bold">Profile</h3>
										<hr />
										

										<form action="">
											<div class="mt-4 mb-2">
												<label for="exampleInputEmail1" class="form-label"
													>Email address</label
												>
												<input
													type="email"
													class="form-control"
													id="exampleInputEmail1"
													aria-describedby="emailHelp"
													placeholder="<%= person.email %>"
													disabled
												/>
												
												
											</div>

											<div class="row">
												<div class="my-2 col-6">
													<label for="fname" class="form-label"
														>Full Name</label
													>
													<input
														type="text"
														class="form-control"
														id="fname"
														disabled
														placeholder="<%= person.name %>"
													/>
												</div>
												<div class="my-2 col-6">
													<label for="role" class="form-label">Role</label>
													<input
														type="Text"
														class="form-control"
														id="role"
														placeholder="<%= person.role %>"
														disabled
													/>
												</div>
												<div class="my-2 col-6">
													<label for="role" class="form-label">Class Advisory</label>
													<input
														type="Text"
														class="form-control"
														id="role"
														placeholder="<%= person.classAdvisory %>"
														disabled
													/>
												</div>
												<div class="my-2 col-6">
													<label for="role" class="form-label">Subject Advisory</label>
													<input
														type="Text"
														class="form-control"
														id="role"
														placeholder="<%= person.subjectAdvisory %>"
														disabled
													/>
												</div>
											</div>
											
										</form>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</body>
</html>