<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<script
			src="https://kit.fontawesome.com/ae360af17e.js"
			crossorigin="anonymous"
		></script>

		<link
			rel="stylesheet"
			href="https://cdn.datatables.net/1.13.6/css/dataTables.bootstrap5.min.css"
		/>
		<link
			rel="stylesheet"
			href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,400,0,0"
		/>
		<link
			href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
			rel="stylesheet"
			integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
			crossorigin="anonymous"
		/>
		<script
			defer
			src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
		></script>
		<script defer src="https://code.jquery.com/jquery-3.7.0.js"></script>
		<script
			defer
			src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"
		></script>
		<script
			defer
			src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap5.min.js"
		></script>
		<script defer src="/js/toggler.js"></script>
		<script defer src="/js/tables.js"></script>
		<script defer src="/js/tooltip.js"></script>
		<script defer src="/js/populate.user.form.js"></script>
		<script defer src="/js/update.users.details.js"></script>
		<script defer src="/js/disable.button.js"></script>
		<script defer src="/js/deactivation.script.js"></script>
		<script defer src="/js/activation.script.js"></script>
		<script defer src="/js/escape.js"></script>
		<script defer src="/js/spinner3.js"></script>
		<script defer src="/js/confirm.button.js"></script>

		<link rel="stylesheet" type="text/css" href="/css/styles.css" />

		<title>Inactive Users</title>
	</head>
	<body>
		<div class="wrapper">
			<aside id="sidebar">
				<div class="h-50">
					<div class="sidebar-logo">
						<a href="">
							<img
								src="/img/logo.png"
								class="img-thumbnail border-0"
								alt="logo"
							/>
						</a>
					</div>
					<hr class="mx-4 mt-0" style="width: 13rem" />
					<div class="container my-2">
						<div class="row">
							<div class="col-md-4 mx-2">
								<span class="material-symbols-outlined" style="font-size: 5rem">
									account_circle
								</span>
							</div>
							<div class="col-md-6">
								<p class="my-0 pt-2" style="font-size: 15px">
									<%= person.fname %> <%= person.lname %>
								</p>
								<span class="badge rounded-pill text-bg-info my-0"
									><%= person.role %></span
								>
							</div>
						</div>
					</div>
					<!-- Sidebar Navigation -->
					<ul class="sidebar-nav">
						<li class="sidebar-item">
							<a
								href="/systemAdmin/dashboard"
								class="sidebar-link collapsed"
								data-bs-target="#dashboard"
								aria-expanded="false"
								aria-controls="dashboard"
							>
								<i class="fa-solid fa-sliders pe-2"></i>
								Dashboard
							</a>
						</li>
						<li
							class="sidebar-item"
							style="border-right: 2px solid #007bff; background: #e3edf0"
						>
							<a
								href="/systemAdmin/accounts"
								class="sidebar-link"
								data-bs-target="#"
								aria-expanded="false"
								aria-controls="users"
							>
								<i class="fa-solid fa-user pe-2"></i>
								Account Management
							</a>
						</li>
						<li class="sidebar-item">
							<a
								href="/systemAdmin/records-menu"
								class="sidebar-link"
								aria-expanded="false"
								aria-controls="pages"
							>
								<i class="fa-regular fa-file-lines pe-2"></i>
								Records Management
							</a>
						</li>
						<li class="sidebar-item">
							<a
								href="/systemAdmin/archives"
								class="sidebar-link"
								aria-expanded="false"
								aria-controls="auth"
							>
								<i class="fa-solid fa-archive pe-2"></i>
								Archives
							</a>
						</li>
						<li class="sidebar-item">
							<a
								href="/systemAdmin/calendar"
								class="sidebar-link collapsed"
								data-bs-target="#dashboard"
								aria-expanded="false"
								aria-controls="dashboard"
							>
								<i class="fa-regular fa-calendar pe-2"></i>
								Calendar
							</a>
						</li>
						<li class="sidebar-item">
							<a
								href="/systemAdmin/reports"
								class="sidebar-link collapsed"
								data-bs-target="#dashboard"
								aria-expanded="false"
								aria-controls="dashboard"
							>
								<i class="fa-regular fa-flag pe-2"></i>
								Reports
							</a>
						</li>
					</ul>
				</div>
			</aside>

			<div class="main">
				<nav class="navbar navbar-expand-lg px-1 border-bottom">
					<!-- Button for sidebar toggle -->
					<div class="container-fluid">
						<button class="btn" type="button" data-bs-theme="light">
							<span class="navbar-toggler-icon"></span>
						</button>

						<ul class="navbar-nav">
							<!-- Added this ul element for right-aligned items -->
							<li class="nav-item dropdown">
								<a
									class="nav-link dropdown-toggle"
									href="#"
									role="button"
									data-bs-toggle="dropdown"
									aria-expanded="false"
								>
									<span class="fa-solid fa-user pe-2"></span>
								</a>
								<ul class="dropdown-menu dropdown-menu-lg-end">
									<li>
										<a class="dropdown-item" href="/systemAdmin/profile"
											>View Profile</a
										>
									</li>
									<li>
										<a class="dropdown-item" href="/systemAdmin/historyLogs"
											>History logs</a
										>
									</li>
									<li><hr class="dropdown-divider" /></li>
									<li>
										<a class="dropdown-item" href="/auth/logout">Logout</a>
									</li>
								</ul>
							</li>
						</ul>
					</div>
				</nav>
				<div class="container-lg">
					<h2 class="my-1">Inactive users</h2>
					<hr />
					<div class="container w-100 position-relative">
						<% try { %> <%- include('../credentials/flash-message.ejs') %> <% }
						catch (error) { %>
						<div>Error: <%= error.message %></div>
						<% } %>

						<table
							id="example"
							class="table table-striped hover"
							style="width: 100%"
						>
							<thead class="table-info">
								<tr>
									<th>Last Name</th>
									<th>First Name</th>
									<th>Email</th>
									<th>Role</th>
									<th>Class Advisory</th>

									<th>Status</th>
									<th>Action</th>
								</tr>
							</thead>
							<tbody>
								<% inactiveUsers.forEach(user => { %>
                                <tr>
                                    <td><%= user.lname %></td>
                                    <td><%= user.fname %></td>
                                    <td><%= user.email %></td>
                                    <td><%= user.role %></td>
                                    <td><%= user.classAdvisory %></td>
                                    <td class="status-cell"><%= user.status %></td>
                                    <td>
                                        <button
										type="button"
										class="btn btn-sm activate-user-btn"
										data-bs-toggle="modal"
										data-user-id="<%= user._id %>"
									>
										<span
											class="material-symbols-outlined"
											data-bs-toggle="tooltip"
											data-bs-placement="top"
											data-bs-title="Activate user"
										>
											person_add
										</span>
									</button>
                                    </td>
                                </tr>
                                <% }); %>
							</tbody>

							<tfoot class="table-info">
								<tr>
									<th>Last Name</th>
									<th>First Name</th>
									<th>Email</th>
									<th>Role</th>
									<th>Class Advisory</th>
									<th>Status</th>
									<th>Action</th>
								</tr>
							</tfoot>
						</table>
					</div>
				</div>
			</div>
		</div>
	</body>
</html>
