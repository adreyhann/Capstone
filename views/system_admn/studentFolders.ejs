<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link
			href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
			rel="stylesheet"
			integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
			crossorigin="anonymous"
		/>
		<link
			rel="stylesheet"
			href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,400,0,0"
		/>

		<script
			defer
			src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
			integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
			crossorigin="anonymous"
		></script>
		<script
			defer
			src="https://kit.fontawesome.com/ae360af17e.js"
			crossorigin="anonymous"
		></script>
		<script defer src="https://cdn.jsdelivr.net/npm/chart.js"></script>
		<script defer src="/js/charts.js"></script>
		<script defer src="/js/toggler.js"></script>
		<script defer src="/js/tooltip.js"></script>
		<link rel="stylesheet" type="text/css" href="/css/styles.css" />
		<link rel="icon" type="image/x-icon" href="/img/logo.png" />
		<title>View Files</title>
	</head>
	<body>
		<div class="wrapper">
			<!-- Sidebar -->
			<aside id="sidebar">
				<div class="h-50">
					<div class="sidebar-logo">
						<a href="">
							<img
								src="/img/logo.png"
								class="img-thumbnail border-0"
								alt="logo"
							/>
						</a>
					</div>
					<hr class="mx-4 mt-0" style="width: 13rem" />
					<div class="container my-2">
						<div class="row">
							<div class="col-md-4 mx-2">
								<span class="material-symbols-outlined" style="font-size: 5rem">
									account_circle
								</span>
							</div>
							<div class="col-md-6">
								<p class="my-0 pt-2" style="font-size: 15px">
									<%= person.fname %> <%= person.lname %>
								</p>
								<span class="badge rounded-pill text-bg-info my-0 fw-normal"
									><%= person.role %></span
								>
							</div>
						</div>
					</div>
					<!-- Sidebar Navigation -->
					<ul class="sidebar-nav">
						<li class="sidebar-item">
							<a
								href="/systemAdmin/dashboard"
								class="sidebar-link collapsed"
								data-bs-target="#dashboard"
								aria-expanded="false"
								aria-controls="dashboard"
								data-menuitem="dashboard"
							>
								<i class="fa-solid fa-sliders pe-2"></i>
								Dashboard
							</a>
						</li>
						<li class="sidebar-item">
							<a
								href="/systemAdmin/accounts"
								class="sidebar-link"
								aria-expanded="false"
								aria-controls="users"
								data-menuitem="accounts"
							>
								<i class="fa-solid fa-user pe-2"></i>
								Account Management
							</a>
						</li>
						<li
							class="sidebar-item"
							style="border-right: 2px solid #007bff; background: #e3edf0"
						>
							<a
								href="/systemAdmin/records-menu"
								class="sidebar-link"
								aria-expanded="false"
								aria-controls="pages"
								data-menuitem="records"
							>
								<i class="fa-regular fa-file-lines pe-2"></i>
								Records Management
							</a>
						</li>
						<li class="sidebar-item">
							<a
								href="/systemAdmin/archives"
								class="sidebar-link"
								aria-expanded="false"
								data-menuitem="archives"
							>
								<i class="fa-solid fa-archive pe-2"></i>
								Archives
							</a>
						</li>
						<li class="sidebar-item">
							<a
								href="/systemAdmin/calendar"
								class="sidebar-link collapsed"
								data-bs-target="#dashboard"
								aria-expanded="false"
								data-menuitem="calendar"
							>
								<i class="fa-regular fa-calendar pe-2"></i>
								Calendar
							</a>
						</li>
						<li class="sidebar-item">
							<a
								href="/systemAdmin/reports"
								class="sidebar-link collapsed"
								data-bs-target="#dashboard"
								aria-expanded="false"
								aria-controls="dashboard"
								data-menuitem="reports"
							>
								<i class="fa-regular fa-flag pe-2"></i>
								Reports
							</a>
						</li>
					</ul>
				</div>
			</aside>
			<!-- Main Component -->
			<div class="main">
				<nav class="navbar navbar-expand-lg px-1 border-bottom">
					<!-- Button for sidebar toggle -->
					<div class="container-fluid">
						<button class="btn" type="button" data-bs-theme="light">
							<span class="navbar-toggler-icon"></span>
						</button>
						<ul class="navbar-nav">
							<!-- Added this ul element for right-aligned items -->
							<li class="nav-item dropdown">
								<a
									class="nav-link dropdown-toggle"
									href="#"
									role="button"
									data-bs-toggle="dropdown"
									aria-expanded="false"
								>
									<span class="fa-solid fa-user pe-2"></span>
								</a>
								<ul class="dropdown-menu dropdown-menu-lg-end">
									<li>
										<a class="dropdown-item" href="/systemAdmin/profile"
											>View Profile</a
										>
									</li>
									<li>
										<a class="dropdown-item" href="/systemAdmin/historyLogs"
											>History Logs</a
										>
									</li>
									<li><hr class="dropdown-divider" /></li>
									<li>
										<a class="dropdown-item" href="/auth/logout">Logout</a>
									</li>
								</ul>
							</li>
						</ul>
					</div>
				</nav>
				<div class="container-lg position-relative">
					<h2 class="mt-2">Student Folders</h2>
					<hr />
                    <div class="row d-flex justify-content-start mx-4 grid gap-4">
						<% if (student.transferee === 'Yes') { %>
							<div class="card custom-card" style="width: 18rem; height: 130px">
								<div class="card-body">
									<h4 class="card-title position-relative">Old files</h4>
									<p class="card-text">View student old files</p>
									<a
										href="/systemAdmin/oldFiles/<%= student._id %>"
										class="card-link"
										>View Old files</a
									>
								</div>
							</div>
						<% } %>
						<div class="card custom-card" style="width: 18rem; height: 130px">
							<div class="card-body">
								<h4 class="card-title position-relative">Current files</h4>
								<p class="card-text">View student current files</p>
								<a
									href="/systemAdmin/view-files/<%= student._id %>"
									class="card-link"
									>View current files</a
								>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</body>
</html>
